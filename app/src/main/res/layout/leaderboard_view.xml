                android:textStyle="bold"
                android:gravity="center"
                >
            </TextView>
            <TextView
                android:layout_width="155dp"
                android:layout_height="match_parent"
                android:id="@+id/Rank6Username"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="18dp"
