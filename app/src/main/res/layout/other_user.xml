<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="98dp"
            android:layout_height="112dp"
            android:src ="@drawable/other_user_pf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="TextView"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Total Score: "
                android:textStyle="bold"/>

            <Button
                android:id="otherUserStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="0dp"
                android:text="Player Stat"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="439dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="207dp"
            android:layout_height="387dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/OU_QR1"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/OU_QR2"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/OU_QR3"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightOtherPlayer"
            android:layout_width="207dp"
            android:layout_height="387dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/OU_QR4"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/OU_QR5"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/OU_QR6"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>