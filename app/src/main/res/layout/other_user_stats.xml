<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@color/purple_200"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="OtherPlayerName"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/Left_OU_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Score:"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of QR scanned:"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Right_OU_stat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OU_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiona"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="right"/>

            <TextView
                android:id="@+id/OU_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radiant"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="right"/>

            <TextView
                android:id="@+id/OU_totalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="right"/>

            <TextView
                android:id="@+id/OU_scannedQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="right"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>